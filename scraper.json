{
  "index_uid": "docs",
  "sitemap_urls": ["https://material.nics.nat.gov.tw/sitemap.xml"],
  "start_urls": ["https://material.nics.nat.gov.tw/"],
  "url_mirror": "http://localhost:3000/",
  "allowed_domains": [
    "material.nics.nat.gov.tw",
    "localhost",
    "host.docker.internal"
  ],
  "selectors": {
    "lvl0": {
      "selector": "nav.navbar a.navbar__link--active",
      "default_value": "數位韌性教材"
    },
    "lvl1": "article h1",
    "lvl2": "article h2",
    "lvl3": "article h3",
    "lvl4": "article h4",
    "lvl5": "article h5",
    "lvl6": "article h6",
    "content": "article p, article li, article td",
    "lang": {
      "selector": "/html/@lang",
      "type": "xpath",
      "global": true
    }
  },
  "index_headings": true,
  "aggregate_content": true,
  "min_indexed_level": 1,
  "strip_chars": " .,;:#",
  "scrap_start_urls": true,
  "custom_settings": {
    "stopWords": [
      "的",
      "是",
      "在",
      "了",
      "和",
      "與",
      "及",
      "或",
      "the",
      "a",
      "an"
    ],
    "rankingRules": [
      "words",
      "typo",
      "proximity",
      "attribute",
      "sort",
      "exactness"
    ],
    "distinctAttribute": "hierarchy_lvl1",
    "filterableAttributes": ["hierarchy_lvl0", "hierarchy_lvl1", "lang"]
  }
}
